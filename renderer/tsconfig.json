{
  "compilerOptions": {
    "paths": {
      "@tictactoe/interfaces": ["../interfaces"],
      "@tictactoe/interfaces/mutations": ["../interfaces/mutations"],
      "@tictactoe/interfaces/events": ["../interfaces/events"],
      "@tictactoe/internal": ["../internal"]
    },
    "outDir": "../build/",
    "noImplicitAny": true,
    "strict": true,
    "module": "es6",
    "target": "es5",
    "jsx": "react",
    "allowJs": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true
  }
}